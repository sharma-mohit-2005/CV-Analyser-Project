{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksPlan": {
      "providers": ["python"],
      "phases": {
        "install": {
          "cmds": ["pip install -r deploy-requirements.txt"]
        },
        "start": {
          "cmds": ["gunicorn --bind 0.0.0.0:$PORT app:app"]
        }
      }
    }
  },
  "variables": {
    "GEMINI_API_KEY": {
      "description": "Your Google Gemini API Key",
      "required": true
    }
  }
}
